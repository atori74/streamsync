{
	"name": "Stream Sync",
	"version": "0.1",
	"description": "Sync timing of a streaming simultaneously viewed by host and clients.",
	"permissions": ["storage", "tabs", "declarativeContent", "notifications", "http://*/*", "https://*/*"],
	"background": {
		"page": "background.html",
		"persistent": true
	},
	"page_action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/watch*"],
			"js": ["youtubeCtl.js"]
		}
	],
	"manifest_version": 2
}
